#!/usr/bin/env bash
set -e

# Move to the root directory of the repo so you can run this script from anywhere
SCRIPT_DIR="$( cd "$( dirname "$0" )" >/dev/null 2>&1 && pwd )"
cd "${SCRIPT_DIR}"/..

# Clear up any previous run
rm -rf build

execute_test () {
    if [ -d "${1}" ]; then
        (
        cd "${1}"
        # Get the exercise name from the directory
        EXERCISE_NAME=$(echo "$1" | tr '-' '_')

        echo "Running tests for ${EXERCISE_NAME}";

        TEST_FILE="test/test_$EXERCISE_NAME.c"
        if ! grep -q UnityBegin\(\"$TEST_FILE\"\) $TEST_FILE; then
            echo "Incorrect UnityBegin() test file argument" > /dev/stderr
            echo "Expected: UnityBegin(\"$TEST_FILE\");" > /dev/stderr
            echo "Found: $(sed -n '/UnityBegin/p' $TEST_FILE)" > /dev/stderr
            exit 1
        fi;

        #remove the ignore line
        sed -i 's/TEST_IGNORE();//' test/test_*.c

        # Copy the examples with the correct name for the exercise
        if [ -e "src/example.c" ]
        then
          mv src/example.c src/"${EXERCISE_NAME}".c
        fi

        if [ -e "src/example.h" ]
        then
          mv src/example.h src/"${EXERCISE_NAME}".h
        fi

        # Make it!
        make clean >> /dev/null;
        make memcheck
        echo ""
        )
    fi
}

# Clone the exercises directory to avoid pollution
if [ $# -gt 0 ]; then
    mkdir build
    cd exercises
    cp -r "$@" ../build
    cd ../build/
else
    cp -r exercises build
    cd build/
fi

# Allow specifying which tests to run as arguments
if [ $# -gt 0 ]; then
    for exercise in "$@"; do
        execute_test "$exercise"
    done
else
    for exercise in *; do
        execute_test "$exercise"
    done
fi

